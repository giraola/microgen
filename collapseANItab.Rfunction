collapseANItab <- function(
			
			anitab,  # The filename of assignSpecies output
			species, # A list object derived from makeSpeciesList
			outpref  # A prefix for output filename

			) {

	ani <- readRDS(anitab)
	sps <- species

	sle <- length(sps)
	nms <- names(sps)
	cns <- colnames(ani)

	nns <- c()
	nre <- NULL	

	for (x in 1:sle) {

		s <- as.vector(sps[[x]])
		w <- which(cns%in%s)

		if (length(w)>1) {

			m   <- apply(ani[,w],1,mean)
			nns <- c(nns,nms[x])
			nre <- cbind(nre,m)

		} else if (length(w)==1) {

			nns <- c(nns,nms[x])
			nre <- cbind(nre,ani[,w])

		} else {

			stop(paste0('Genomes of species ',nms[x],' were not found!'))
		}
	}

	rownames(nre) <- rownames(ani)
	colnames(nre) <- nns

	saveRDS(nre,file=paste0(outpref,'.rds'))
}
